{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "es2015", "dom"],
    "removeComments": false,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "typeRoots": [ "node_modules/@types" ],
    "types": [ "node", "core-js", "hammerjs", "google-maps" ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "filesGlob": [
    "src/main.ts"
  ]
}
